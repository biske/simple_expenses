<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<div>
  <h3>Укупно за тренутни месец: <%= Expense.total_for_current_month %> динара.</h3>
</div>

<div>
  <h3> <%= link_to "Детаљнија статистика", statistics_path %> </h3>
</div>

<br>
<%= link_to 'New Expense', new_expense_path %>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Description</th>
      <th>Billed at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.price %></td>
        <td><%= expense.description %></td>
        <td><%= expense.billed_at %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>